<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Players</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        /* General Styles */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #0056b3;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            padding-left: 20px;
            color: white;
        }

        .sidebar a {
            display: block;
            text-decoration: none;
            color: white;
            padding: 10px 20px;
            margin-bottom: 15px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .sidebar a:hover {
            background-color: #004494;
        }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            padding: 30px;
        }

        .main-content h1 {
            font-size: 36px;
            color: #003366;
            margin-bottom: 20px;
        }

        /* Search Form */
        .form-inline {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .form-inline input,
        .form-inline button {
            font-size: 16px;
        }

        .form-inline button {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

        .form-inline button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        /* Table */
        .table {
            background-color: white;
            border-radius: 5px;
            overflow: hidden;
        }

        .table thead {
            background-color: #007bff;
            color: white;
        }

        .table td, .table th {
            vertical-align: middle;
        }

        .btn-sm {
            font-size: 14px;
            padding: 5px 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="/" class="home-btn">Back to Home</a>
        <a href="/api/employee">Employees</a>
        <a href="/api/player">Players</a>
        <a href="/api/team">Teams</a>
        <a href="/api/equipment">Equipment</a>
        <a href="/api/tournament">Tournaments</a>
        <a href="/api/match">Matches</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h1>Players</h1>

        <!-- Add Player Button -->
        <a href="/api/player/add-form" class="btn btn-success mb-3">Add Player</a>

        <!-- Search Form -->
        <form method="GET" action="/api/player/search" class="form-inline">
            <input type="number" name="playerId" class="form-control mr-2" placeholder="Enter Player ID" required>
            <button type="submit" class="btn btn-info">Search</button>
        </form>

        <!-- Table -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Number</th>
                    <th>City</th>
                    <th>Rank</th>
                    <th>MatchId</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < players.length; i++) { %>
                <tr>
                    <td><%= players[i].playerId %></td>
                    <td><%= players[i].playerName %></td>
                    <td><%= players[i].playerNumber %></td>
                    <td><%= players[i].playerCity %></td>
                    <td><%= players[i].rank %></td>
                    <td><%= players[i].matchId %></td>
                    <td>
                        <a href="/api/player/edit-form/<%= players[i].playerId %>" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/api/player/delete/<%= players[i].playerId %>" class="btn btn-danger btn-sm">Del.</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>

